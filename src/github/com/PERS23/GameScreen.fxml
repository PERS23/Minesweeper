<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.CheckMenuItem?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.com.PERS23.GameController">
    <top>
        <MenuBar fx:id="gameMenu" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Game">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New Game" accelerator="F2" onAction="#startNewGame" />
                        <Menu mnemonicParsing="false" text="Change Board" >
                            <CheckMenuItem fx:id="beginnerOption" mnemonicParsing="false" text="Beginner" selected="true" onAction="#handleChangeDifficulty" accelerator="F5"/>
                            <CheckMenuItem fx:id="intermediateOption" mnemonicParsing="false" text="Intermediate" selected="false" onAction="#handleChangeDifficulty" accelerator="F6"/>
                            <CheckMenuItem fx:id="expertOption" mnemonicParsing="false" text="Expert" selected="false" onAction="#handleChangeDifficulty" accelerator="F7" />
                        </Menu>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" text="Statistics" accelerator="F4" onAction="#showStats" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleExitMenuOption"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
    <VBox fx:id="gameContainer" spacing="32" styleClass="outerContainer" BorderPane.alignment="CENTER">
        <padding>
            <Insets bottom="16" left="16" right="16" top="16" />
        </padding>
        <children>
            <GridPane fx:id="gameToolbar" styleClass="innerContainer">
                <children>
                    <Label fx:id="flagCountDisplay" alignment="CENTER" contentDisplay="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="69">
                        <GridPane.margin>
                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                        </GridPane.margin>
                    </Label>
                    <Region GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                    <Button fx:id="gameStatusFace" maxHeight="50" maxWidth="50" styleClass="covered_button" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#startNewGame">
                        <GridPane.margin>
                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                        </GridPane.margin>
                    </Button>
                    <Region GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />
                    <Label fx:id="timerDisplay" alignment="CENTER" contentDisplay="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="0" minWidth="69">
                        <GridPane.margin>
                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                        </GridPane.margin>
                    </Label>
                </children>
            </GridPane>
            <GridPane fx:id="gameGridDisplay" alignment="CENTER" styleClass="innerContainer" />
        </children>
    </VBox>
    </center>
</BorderPane>
